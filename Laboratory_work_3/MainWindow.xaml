<Window x:Class="Laboratory_work_3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Laboratory_work_3"
        mc:Ignorable="d"
        Title="Симулятор хоббита" Style="{StaticResource st_Win}"
        Icon="pack://application:,,,/images/icon.jpg">
    <Grid>
        <StackPanel VerticalAlignment="Center">
            <Button  Height="50"  Margin="20" x:Name="btNewGame" Click="btNewGame_Click">Новая игра</Button>
            <Button  Height="50" Margin="20" x:Name="btRunGame" Click="btRunGame_Click">Загрузить игру</Button>
            <Button  Height="50" Margin="20" x:Name="btExit" Click="btExit_Click">Выйти</Button>
        </StackPanel>
    </Grid>
</Window>
