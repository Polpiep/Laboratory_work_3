<Application x:Class="Laboratory_work_3.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Laboratory_work_3"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="GreenYellow" />
            <Setter Property="Margin" Value="5" />
        </Style>
        <Style x:Key="st_Win" TargetType="Window">
            <Setter Property="Background" Value="MintCream" />
            <Setter Property="Margin" Value="5" />
            <Setter Property="MinHeight" Value="450" />
            <Setter Property="Height" Value="720" />
            <Setter Property="MinWidth" Value="800" />
            <Setter Property="Width" Value="1280" />
            <Setter Property="MaxWidth" Value="1920" />
            <Setter Property="MaxHeight" Value="1080" />
            <Setter Property="Title" Value="Симулятор Хоббита" />
        </Style>
        <Style TargetType="DataGrid">
            <Setter Property="Background" Value="GreenYellow" />
            <Setter Property="Margin" Value="5" />
        </Style>
        <Style x:Key="st_SP" TargetType="StackPanel">
            <Setter Property="Background" Value="GreenYellow" />
            <Setter Property="Margin" Value="5" />
        </Style>
    </Application.Resources>
</Application>
