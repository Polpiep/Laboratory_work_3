<Window x:Class="Laboratory_work_3.Forms.NewGameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Laboratory_work_3.Forms"
        mc:Ignorable="d"
        Title="Новая игра" Style="{StaticResource st_Win}"
        Icon="pack://application:,,,/images/icon.jpg">
    <Grid>
        <StackPanel>
            
            <StackPanel Orientation="Horizontal">
                <Label Margin="5">Укажите имя игрока</Label>
                <TextBox Name="tbName" Width="150" Margin="5"></TextBox>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <Label  Margin="5">Укажите возраст</Label>
                <TextBox Name="tbAge" Width="150" Margin="5"></TextBox>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <Label  Margin="5">Выберете пол</Label>
                <ComboBox  Name="cbGender" Width="150" Margin="5"></ComboBox>
            </StackPanel>

            <Button FontSize="20" x:Name="btCreateGame" Margin="20" Click="btCreateGame_Click">Создать</Button>
        </StackPanel>
    </Grid>
</Window>
